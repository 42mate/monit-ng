# Generated by Chef for <%= node.fqdn %>
set daemon <%= @daemon %>
  with start delay <%= @start_delay %>
set logfile <%= @log_file %>
set idfile <%= @id_file %>
set statefile <%= @state_file %>
set mailserver
<% @mailservers.each do |mailserver| -%>
 <%= mailserver %>,
<% end -%>
set mail-format {
      from: <%= @mail_from %>
   subject: <%= @mail_subject %>
   message: <%= @mail_msg %>
}
<% @subscribers.each do |subscriber| -%>
set alert <%= subscriber %>
<% end -%>
set eventqueue
  basedir <%= @eventqueue_dir %>
  slots <%= @eventqueue_slots %>
set httpd port <%= @port %> and
  use address <%= @address %>
  <% @allow.each do |allowed| -%>
  allow <%= allowed %>
  <% end -%>
<% unless @mmonit.nil? %>
set mmonit <%= @mmonit %>
<% end %>
include <%= @conf_dir %>/*
