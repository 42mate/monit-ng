# Monit system monitor daemon job
# Generated by Chef <%= Time.now %>
description "Monit system monitor service"

limit core unlimited unlimited

start on runlevel [2345]
stop on runlevel [!2345]

expect daemon

respawn
respawn limit 10 5
exec <%= @prefix %>/bin/monit -p /var/run/monit.pid -c <%= @conf_file %>
pre-stop exec <%= @prefix %>/bin/monit -c <%= @conf_file %> quit
